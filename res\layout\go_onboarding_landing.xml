<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/go_onboarding_container" style="@style/GoOnboarding.WelcomeContainer"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/go_onboarding_footer_spacer">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="@dimen/go_onboarding_text_width" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageView android:id="@id/tooltip_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16.0dip" />
            <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textSize="28.0sp" android:id="@id/go_onboarding_title" style="@style/GoOnboarding.Text.Title" />
            <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@id/go_onboarding_body" style="@style/GoOnboarding.Text.SubText" />
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@id/go_onboarding_footer_spacer" android:layout_alignParentBottom="true" style="@style/GoOnboarding.Spacer" />
</RelativeLayout>