<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Ak.EmptyViewContent.EmptyCollection">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <style name="Ak.EmptyViewContent.EmptyCollection.Link">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="Ak.EmptyViewImage">
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="GridItemImageView">
        <item name="movement">-8dp</item>
    </style>
    <style name="PlayerTitle">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="PlayerTrackArtwork">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="ariv_aspectRatioEnabled">true</item>
        <item name="ariv_dominantMeasurement">@null</item>
    </style>
    <style name="StationInfo.HeaderContainer">
        <item name="android:background">@color/stations_blur_overlay</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StationInfo.LikeButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableLeft">@drawable/ic_like_station_selector</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="UniflowEmptyView.Container">
        <item name="android:orientation">@null</item>
        <item name="android:padding">32dp</item>
    </style>
    <style name="UniflowEmptyView.Image">
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="UniflowEmptyView.Text">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/empty_message_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/empty_message_margin_left_right</item>
    </style>
    <style name="Widget.Design.TabLayout">
        <item name="tabGravity">1</item>
        <item name="tabMode">1</item>
    </style>
</resources>
