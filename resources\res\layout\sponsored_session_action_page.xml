<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/raven" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/advertisement_header" android:background="@color/white" android:layout_width="match_parent" android:layout_height="43dp">
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textColor="@color/ash" android:gravity="center_horizontal" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/advertisement" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="@string/ads_advertisement"/>
    </FrameLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/btn_group" android:layout_below="@+id/advertisement_header">
        <RelativeLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textSize="22sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="start" android:id="@+id/opt_in_text" android:layout_width="300dp" android:layout_height="84dp" android:layout_marginBottom="40dp" android:text="@string/ads_opt_in_text" android:maxLines="3" android:layout_centerHorizontal="true" android:lineSpacingExtra="2sp"/>
            <ImageView android:id="@+id/ad_image_view" android:background="@color/raven" android:layout_width="340dp" android:layout_height="285dp" android:layout_below="@+id/opt_in_text" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout android:id="@+id/btn_group" android:background="@color/white" android:layout_width="match_parent" android:layout_height="75dp" android:layout_alignParentBottom="true">
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textSize="20sp" android:textColor="@color/black" android:ellipsize="end" android:gravity="center" android:id="@+id/btn_left" android:layout_width="0dp" android:layout_height="75dp" android:maxLines="1" android:layout_weight="0.5"/>
        <View android:layout_gravity="center_vertical" android:background="@color/platinum" android:layout_width="1dp" android:layout_height="40dp"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textSize="20sp" android:textColor="@color/soundcloudOrange" android:ellipsize="end" android:gravity="center" android:id="@+id/btn_right" android:layout_width="0dp" android:layout_height="75dp" android:maxLines="1" android:layout_weight="0.5"/>
    </LinearLayout>
</RelativeLayout>
