<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/interstitial_close" android:paddingLeft="@dimen/ad_overlay_padding" android:paddingRight="@dimen/ad_overlay_padding" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
    <FrameLayout android:id="@+id/interstitial_header" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignLeft="@+id/interstitial_image_holder" android:layout_alignRight="@+id/interstitial_image_holder" android:layout_alignParentTop="true">
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/advertisement" android:padding="@dimen/ad_overlay_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ads_advertisement" style="@style/AdText.Advertisement"/>
        <com.soundcloud.android.view.customfontviews.CustomFontButton android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:layout_marginTop="@dimen/interstitial_padding_large" android:layout_marginBottom="@dimen/ad_overlay_padding" style="@style/AdOverlayClose"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/interstitial_image_holder" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="0dp" android:foreground="@drawable/ad_overlay_selector" android:layout_above="@+id/interstitial_preview_container" android:layout_below="@+id/interstitial_header" android:layout_centerHorizontal="true">
        <com.soundcloud.android.view.InterstitialAdImageView android:layout_gravity="center_horizontal" android:id="@+id/interstitial_image" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:adjustViewBounds="true"/>
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/interstitial_preview_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/interstitial_padding_large" android:layout_marginTop="@dimen/interstitial_padding_large" android:layout_marginRight="@dimen/interstitial_padding_large" android:layout_marginBottom="@dimen/interstitial_padding_large" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/interstitial_now_playing_artwork" android:background="@color/mist" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginRight="@dimen/ad_overlay_padding" android:contentDescription="@null"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/interstitial_now_playing_title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" style="@style/AdText.NextUp.Title"/>
    </LinearLayout>
</RelativeLayout>
