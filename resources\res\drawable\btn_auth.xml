<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/toggle_on_ripple">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/auth_button_corner_radius"/>
                    <solid android:color="@color/mist"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/auth_button_corner_radius"/>
                    <solid android:color="@color/toggle_on"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
