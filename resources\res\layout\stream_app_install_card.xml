<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/stream_app_install" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="@dimen/card_padding_horizontal" android:paddingRight="@dimen/card_padding_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/header_container" style="@style/Cards.Header">
            <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/ad_item" android:layout_marginLeft="0dp" android:drawableLeft="@drawable/inset_promoted_icon" android:drawablePadding="3dp" style="@style/Cards.SecondaryHeaderText"/>
            <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/why_ads" android:text="@string/ads_why_ads" android:layout_alignParentRight="true" style="@style/Stream.Button.WhyAds"/>
        </RelativeLayout>
        <com.soundcloud.android.view.AspectRatioImageView android:id="@+id/image" app:foreground="@drawable/artwork_border" style="@style/Stream.Image.AppInstall"/>
        <RelativeLayout android:paddingBottom="18dp" style="@style/Cards.Footer">
            <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/app_name" style="@style/Stream.Text.AppInstallName"/>
            <RatingBar android:id="@+id/rating_bar" android:layout_below="@+id/app_name" style="@style/Stream.RatingBar.AppInstall"/>
            <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/ratings_count" android:layout_marginLeft="5dp" android:layout_toRightOf="@+id/rating_bar" android:layout_below="@+id/app_name" style="@style/ListItemText"/>
            <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/call_to_action" android:layout_alignTop="@+id/app_name" android:layout_alignBottom="@+id/rating_bar" android:layout_alignParentRight="true" style="@style/Stream.Button.CallToAction"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
