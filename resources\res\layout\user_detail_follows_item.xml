        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/profile_following" android:layout_weight="1" style="@style/Profile.InfoTab.ViewFollowsText"/>
