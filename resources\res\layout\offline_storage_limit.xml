<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <RelativeLayout android:gravity="center_vertical" android:paddingTop="10dp" android:paddingBottom="2dp" android:minHeight="?android:attr/listPreferredItemHeight" style="@style/SettingsContainer">
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/title_storage_usage" android:text="@string/pref_offline_storage_usage" style="@style/SettingsTitle"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="?android:attr/textColorSecondary" android:gravity="end" android:id="@+id/offline_storage_free" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/title_storage_usage" android:layout_alignTop="@+id/title_storage_usage" android:layout_alignParentRight="true"/>
        <com.soundcloud.android.settings.offline.view.UsageBarView android:id="@+id/offline_storage_usage_bars" android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:layout_below="@+id/offline_storage_free"/>
        <LinearLayout android:id="@+id/offline_storage_legend" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:baselineAligned="false" android:layout_below="@+id/offline_storage_usage_bars">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2">
                <View android:id="@+id/offline_storage_legend_other_box" android:background="@color/usage_bar_other" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginTop="2dp"/>
                <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="14sp" android:textColor="?android:attr/textColorPrimary" android:id="@+id/offline_storage_legend_other_label" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pref_offline_used_by_other_apps" android:layout_toRightOf="@+id/offline_storage_legend_other_box" android:layout_alignParentTop="true"/>
                <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="14sp" android:textColor="?android:attr/textColorSecondary" android:id="@+id/offline_storage_legend_other" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/offline_storage_legend_other_label" android:layout_alignLeft="@+id/offline_storage_legend_other_label"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3">
                <View android:id="@+id/offline_storage_legend_used_box" android:background="@color/usage_bar_used" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginTop="2dp"/>
                <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="14sp" android:textColor="?android:attr/textColorPrimary" android:id="@+id/offline_storage_legend_used_label" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pref_offline_used" android:layout_toRightOf="@+id/offline_storage_legend_used_box" android:layout_alignParentTop="true"/>
                <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="14sp" android:textColor="?android:attr/textColorSecondary" android:id="@+id/offline_storage_legend_used" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/offline_storage_legend_used_label" android:layout_alignLeft="@+id/offline_storage_legend_used_label"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3">
                <View android:id="@+id/offline_storage_legend_limit_box" android:background="@color/usage_bar_limit" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginTop="2dp"/>
                <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="14sp" android:textColor="?android:attr/textColorPrimary" android:id="@+id/offline_storage_legend_limit_label" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pref_offline_limit" android:layout_toRightOf="@+id/offline_storage_legend_limit_box" android:layout_alignParentTop="true"/>
                <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="14sp" android:textColor="?android:attr/textColorSecondary" android:id="@+id/offline_storage_legend_limit" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/offline_storage_legend_limit_label" android:layout_alignLeft="@+id/offline_storage_legend_limit_label"/>
            </RelativeLayout>
        </LinearLayout>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/title" android:text="@string/pref_offline_storage_limit" android:layout_below="@+id/offline_storage_legend" style="@style/SettingsTitle"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/summary" android:text="@string/pref_offline_storage_limit_description" android:maxLines="3" android:layout_toLeftOf="@+id/offline_storage_limit" android:layout_below="@+id/title" android:layout_alignLeft="@+id/title" style="@style/SettingsSummary"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textAppearance="?android:attr/textAppearanceMedium" android:textStyle="bold" android:textColor="@color/soundcloudOrange" android:id="@+id/offline_storage_limit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/summary" android:layout_alignParentRight="true"/>
        <SeekBar android:id="@+id/offline_storage_limit_seek_bar" android:paddingLeft="0dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:progress="50" android:layout_below="@+id/summary"/>
    </RelativeLayout>
</merge>
