<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/profile_header" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header_info_layout" android:background="@android:color/white" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="16dp">
        <ImageView android:id="@+id/profile_banner" android:background="@color/image_loading_color" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="100dp" android:scaleType="centerCrop" android:contentDescription="@null"/>
        <com.soundcloud.android.view.CircularBorderImageView android:id="@+id/image" android:layout_marginTop="@dimen/profile_image_top_margin" android:layout_below="@+id/profile_banner" android:layout_centerHorizontal="true" style="@style/Profile.HeaderImage"/>
        <ImageView android:id="@+id/pro_badge" android:layout_alignBottom="@+id/image" android:contentDescription="@string/accessibility_pro_badge" android:layout_alignEnd="@+id/image" style="@style/Profile.HeaderImageProBadge"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:textColor="@color/list_primary" android:gravity="center" android:id="@+id/username" android:visibility="invisible" android:layout_marginTop="12dp" android:layout_below="@+id/image" style="@style/Profile.Username"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/followers_count" android:visibility="invisible" android:layout_marginTop="4dp" android:drawableLeft="@drawable/ic_followers_grey_vector" android:layout_below="@+id/username" android:layout_centerHorizontal="true" android:drawableStart="@drawable/ic_followers_grey_vector" style="@style/Profile.Stats"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_below="@+id/followers_count" android:layout_centerHorizontal="true">
            <com.soundcloud.android.view.ProfileToggleButton android:id="@+id/toggle_btn_follow" android:visibility="invisible" android:layout_marginTop="0dp" android:layout_marginRight="8dp" style="@style/Profile.ToggleButton.Follow.Large.TextToggle"/>
            <com.soundcloud.android.view.ProfileToggleButton android:id="@+id/toggle_btn_share" android:layout_marginTop="0dp" android:layout_marginRight="8dp" style="@style/Profile.ToggleButton.Share.Large"/>
            <com.soundcloud.android.view.ProfileToggleButton android:id="@+id/btn_station" android:visibility="invisible" app:textOff="@string/stations_start_user_station" app:textPaddingRight="12dp" style="@style/Profile.ToggleButton.Station.Large"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
