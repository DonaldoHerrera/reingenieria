<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/comment_input_field_radius"/>
            <stroke android:width="1dp" android:color="@color/comment_input_focused"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:state_activated="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/comment_input_field_radius"/>
            <stroke android:width="1dp" android:color="@color/comment_input_unfocused"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>
