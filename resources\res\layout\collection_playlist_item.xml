<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/collections_playlist_item_container" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/collections_playlist_item" android:background="?attr/selectableItemBackground" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="16dp" android:layout_marginEnd="16dp">
        <com.soundcloud.android.view.ForegroundImageView android:id="@+id/artwork" android:layout_width="match_parent" android:layout_height="wrap_content" app:foregroundDrawable="@drawable/artwork_border" app:square="true" style="@style/ListItemImage"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:layout_toLeftOf="@+id/indicator_views" android:layout_below="@+id/artwork" style="@style/Collections.ItemTitle"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/creator" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:layout_below="@+id/title" style="@style/Collections.Creator"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/indicator_views" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/artwork" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/like_indicator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" app:srcCompat="@drawable/ic_like_grey_vector"/>
            <ImageView android:id="@+id/private_indicator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:contentDescription="@string/accessibility_private_playlist" app:srcCompat="@drawable/ic_lock_grey_12_vector"/>
            <com.soundcloud.android.view.DownloadImageView android:id="@+id/offline_state_indicator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" style="@style/DownloadItem"/>
            <ImageView android:id="@+id/no_network_indicator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:src="@drawable/entity_no_network" android:contentDescription="@string/accessibility_no_network"/>
        </LinearLayout>
    </RelativeLayout>
    <com.soundcloud.android.view.OverflowAnchorImageButton android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/overflow_button" android:layout_marginRight="2dp" android:layout_marginEnd="2dp" style="@style/PlaylistItem.OverflowButton"/>
</FrameLayout>
