<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="horizontal" android:padding="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/ak_emptyview_image" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@+id/ak_emptyview_message" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Ak.EmptyViewContent.EmptyCollection"/>
        <TextView android:id="@+id/ak_emptyview_link" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Ak.EmptyViewContent.EmptyCollection.Link"/>
        <Button android:id="@+id/ak_emptyview_btn_action" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Ak.EmptyCollectionButton"/>
    </LinearLayout>
</LinearLayout>
