<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/DialogContainer">
    <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/custom_dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/create_new_playlist" style="@style/MaterialDialog.Title"/>
    <com.soundcloud.android.view.customfontviews.CustomFontEditText android:id="@android:id/edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/create_new_playlist_hint" android:maxLines="1" android:maxLength="255" style="@style/DialogInput"/>
    <com.soundcloud.android.view.customfontviews.CustomFontCheckBox android:id="@+id/chk_private" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/add_playlist_private" style="@style/DialogContentText"/>
    <com.soundcloud.android.view.customfontviews.CustomFontCheckBox android:id="@+id/chk_offline" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/add_playlist_offline" style="@style/DialogContentText"/>
</LinearLayout>
