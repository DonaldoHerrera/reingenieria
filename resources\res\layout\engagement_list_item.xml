<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:foreground="?attr/selectableItemBackground" style="@style/ListItemLayout">
    <com.soundcloud.android.view.CircularBorderImageView android:id="@+id/image" android:layout_width="40dp" android:layout_height="40dp"/>
    <ImageView android:id="@+id/pro_badge" android:layout_alignBottom="@+id/image" android:contentDescription="@string/accessibility_pro_badge" android:layout_alignEnd="@+id/image" style="@style/ListItemImage.User.SmallProBadge"/>
    <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/username" android:layout_marginLeft="12dp" android:layout_marginTop="-4dp" android:layout_marginRight="7dp" android:layout_toLeftOf="@+id/date" android:layout_toRightOf="@+id/image" android:layout_alignTop="@+id/image" style="@style/ListItemText.SecondaryText"/>
    <com.soundcloud.android.view.customfontviews.CustomFontTextView android:ellipsize="end" android:id="@+id/body" android:maxLines="2" android:drawablePadding="6dp" android:layout_toRightOf="@+id/image" android:layout_below="@+id/username" style="@style/ListItemText.PrimaryText"/>
    <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/date" android:layout_alignBaseline="@+id/username" android:layout_alignParentRight="true" style="@style/ListItemText.Numeric"/>
</RelativeLayout>
