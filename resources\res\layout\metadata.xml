<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:gravity="center_vertical" android:id="@+id/artwork" android:background="@android:color/darker_gray" android:focusable="true" android:clickable="true" android:layout_width="@dimen/record_progress_icon_width" android:layout_height="@dimen/share_progress_icon_height" android:scaleType="centerCrop" android:layout_alignParentLeft="true" android:contentDescription="@null"/>
    <com.soundcloud.android.view.customfontviews.CustomFontButton android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/artwork_button" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/record_change_artwork" android:layout_toRightOf="@+id/artwork" android:layout_alignTop="@+id/artwork" android:textAllCaps="true" style="@style/BorderlessButton"/>
    <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/title_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/record_track_title" android:layout_below="@+id/artwork" style="@style/TextAppearance.SoundCloudLightFont"/>
    <com.soundcloud.android.view.customfontviews.CustomFontEditText android:ellipsize="end" android:id="@+id/title" android:fadingEdge="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:layout_below="@+id/title_header" android:inputType="textCapSentences" android:fadeScrollbars="true" style="@style/TextAppearance.SoundCloudLightFont"/>
    <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/txt_record_options" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/record_privacy_header" android:layout_below="@+id/title" style="@style/TextAppearance.SoundCloudLightFont"/>
    <RadioGroup android:orientation="horizontal" android:id="@+id/rdo_privacy" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_below="@+id/txt_record_options">
        <RadioButton android:id="@+id/rdo_public" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/sc_upload_public" android:layout_weight="1"/>
        <RadioButton android:id="@+id/rdo_private" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:text="@string/sc_upload_private" android:layout_weight="1"/>
    </RadioGroup>
</RelativeLayout>
