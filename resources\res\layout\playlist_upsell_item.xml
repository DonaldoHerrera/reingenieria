<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/playlist_upsell" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout style="@style/OnboardingListItemNotificationLayout.Inline">
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upsell_playlist_upgrade_title" style="@style/OnboardingListItemNotification.Title"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upsell_playlist_upgrade_description" style="@style/OnboardingListItemNotification.Description"/>
        <com.soundcloud.android.playback.ui.view.RoundedColorButton android:id="@+id/action_button" android:layout_marginBottom="8dp" style="@style/ListItemNotificationButton"/>
    </LinearLayout>
    <ImageButton android:id="@+id/close_button" android:contentDescription="@string/accessibility_close" style="@style/ListItemNotificationCloseButton"/>
</FrameLayout>
