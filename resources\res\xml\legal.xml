<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <Preference android:title="@string/copyright_information" android:key="copyright_information">
        <intent android:targetPackage="com.soundcloud.android.app" android:action="android.intent.action.VIEW" android:targetClass="com.soundcloud.android.settings.LicensesActivity"/>
    </Preference>
    <Preference android:title="@string/terms_of_use" android:key="terms_of_service">
        <intent android:action="android.intent.action.VIEW" android:data="@string/url_terms"/>
    </Preference>
    <Preference android:title="@string/terms_of_use_go" android:key="go_terms">
        <intent android:action="android.intent.action.VIEW" android:data="@string/url_go_terms"/>
    </Preference>
    <Preference android:title="@string/privacy_policy" android:key="privacy_policy">
        <intent android:action="android.intent.action.VIEW" android:data="@string/url_privacy"/>
    </Preference>
    <Preference android:title="@string/imprint" android:key="imprint">
        <intent android:action="android.intent.action.VIEW" android:data="@string/url_imprint"/>
    </Preference>
</PreferenceScreen>
