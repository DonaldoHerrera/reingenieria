<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@color/white" android:paddingLeft="@dimen/card_padding_horizontal" android:paddingRight="@dimen/card_padding_horizontal" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton android:id="@+id/close_button" android:layout_alignParentRight="true" android:contentDescription="@string/accessibility_close" style="@style/ListItemNotificationCloseButton"/>
        <ImageView android:id="@+id/upsell_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:layout_marginBottom="12dp" android:src="@drawable/offline_download" android:layout_centerHorizontal="true" android:contentDescription="@null"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/collections_upsell_title" android:layout_below="@+id/upsell_image" android:layout_centerHorizontal="true" style="@style/OnboardingListItemNotification.Title"/>
        <com.soundcloud.android.view.customfontviews.CustomFontTextView android:id="@+id/description" android:paddingLeft="32dp" android:paddingRight="32dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/collections_upsell_body" android:layout_below="@+id/title" android:layout_centerHorizontal="true" style="@style/OnboardingListItemNotification.Description"/>
        <com.soundcloud.android.view.customfontviews.CustomFontButton android:id="@+id/upsell_button" android:text="@string/upsell_upgrade_button" android:layout_below="@+id/description" android:layout_centerHorizontal="true" style="@style/OnboardingListItemButton"/>
    </RelativeLayout>
</LinearLayout>
